FROM ubuntu

MAINTAINER Paul Beswick

ENV USER=owtechssg

# Install the desktop and other key utilities
RUN apt-get -o Acquire::ForceIPv4=true update && \
    DEBIAN_FRONTEND=noninteractive apt-get -o Acquire::ForceIPv4=true install -y \
                       lxde-core \
                       lxterminal \
                       tightvncserver \
                       wget \
                       software-properties-common \
                       firefox \
                       default-jdk

# Download and install WebStorm                       
RUN wget -4 -O - download.jetbrains.com/webstorm/WebStorm-10.0.4.tar.gz | tar zxf -
RUN mkdir ~/.vnc
RUN chmod 755 ~/.vnc
# Need to create the appropriate xstartup file
ADD ./xstartup ~/.vnc/xstartup
RUN ~/.vnc ls
RUN chmod 755 ~/.vnc/xstartup
RUN echo 123456 | vncpasswd -f > ~/.vnc/passwd
RUN chmod 600 ~/.vnc/passwd

# Install docker
#wget -4 -qO- https://get.docker.com/ | sh

# Clean up temporary files    
RUN rm -rf /var/lib/apt/lists/* && \
    rm -rf /tmp/*

WORKDIR /data
CMD vncserver :1 -geometry 1920x1080 -depth 24 && tail -F ~/.vnc/*.log

# Expose the port that vnc will connect to
EXPOSE 5901

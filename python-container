# Set base distribution to ubuntu
FROM ubuntu:latest

# File author/maintainer
MAINTAINER Paul Beswick

# Update and install basic utilities
RUN apt-get -o Acquire::ForceIv4=true update && \
    apt-get -o Acquire::ForceIv4=true install -y \
        wget \
        curl \
        git

# Install pip, python is already included in ubuntu
RUN apt-get -o Acquire::ForceIv4=true install -y python-pip
